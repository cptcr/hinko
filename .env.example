# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://hinko:secure_password_change_me@localhost:5432/hinko_bot?schema=public"
POSTGRES_PASSWORD="secure_password_change_me"

# =============================================================================
# DISCORD BOT CONFIGURATION
# =============================================================================
# Get these from https://discord.com/developers/applications
DISCORD_BOT_TOKEN="your_discord_bot_token_here"
DISCORD_CLIENT_ID="your_discord_client_id_here"
DISCORD_CLIENT_SECRET="your_discord_client_secret_here"

# =============================================================================
# NEXTJS/DASHBOARD CONFIGURATION
# =============================================================================
# For production, use your actual domain
NEXTAUTH_URL="http://localhost:3001"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your_nextauth_secret_here"

# =============================================================================
# DASHBOARD SECURITY SETTINGS
# =============================================================================
# Only this user ID can access the dashboard
ADMIN_USER_ID="797927858420187186"
# Only this guild can be managed
TARGET_GUILD_ID="554266392262737930"

# =============================================================================
# GEIZHALS API CONFIGURATION (OPTIONAL)
# =============================================================================
# Get these from Geizhals API if you want price tracking
GEIZHALS_USERNAME="your_geizhals_username"
GEIZHALS_API_KEY="your_geizhals_api_key"

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
NODE_ENV="development"
PORT="3000"
DASHBOARD_PORT="3001"

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL)
# =============================================================================
REDIS_PASSWORD="redis_password"
REDIS_URL="redis://:redis_password@localhost:6379"

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL="info"
LOG_FILE="logs/hinko-bot.log"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_GEIZHALS="false"
ENABLE_MUSIC="false"
ENABLE_WEB_DASHBOARD="true"

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
MAX_MEMORY_MB="512"
WORKER_THREADS="2"
CACHE_TTL_SECONDS="300"