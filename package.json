{
  "name": "pegasus-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "dashboard"
  ],
  "scripts": {
    "dev": "npm run build && npm-run-all --parallel dev:bot dev:dashboard",
    "dev:bot": "ts-node-esm src/index.ts",
    "dev:dashboard": "npm run dev --workspace=dashboard",
    "build": "tsc -p tsconfig.json",
    "build:dashboard": "npm run build --workspace=dashboard",
    "start": "node dist/index.js",
    "start:dashboard": "npm run start --workspace=dashboard",
    "db:migrate": "npx prisma migrate dev",
    "db:studio": "npx prisma studio",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "discord.js": "^14.15.3",
    "dotenv": "^16.4.5",
    "npm-run-all": "^4.1.5",
    "winston": "^3.13.0",
    "axios": "^1.6.7",
    "cheerio": "^1.0.0-rc.12",
    "cron": "^3.1.6",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "sharp": "^0.33.2",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/cron": "^2.4.0",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "eslint": "^8.57.0",
    "prettier": "^3.3.1",
    "prisma": "^5.15.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "type": "module"
}