{
  "name": "hinko-discord-bot",
  "version": "2.0.0",
  "description": "A comprehensive Discord bot with leveling, moderation, and management features",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:dashboard": "cd dashboard && npm run dev",
    "dev:concurrent": "concurrently \"npm run dev\" \"npm run dev:dashboard\"",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:deploy": "npx prisma migrate deploy",
    "db:reset": "npx prisma migrate reset",
    "db:seed": "ts-node prisma/seed.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "docker:build": "docker build -t hinko-bot .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "prepare": "npm run build",
    "postinstall": "npm run db:generate"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "@types/ms": "^2.1.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "ms": "^2.1.3",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prisma": "^6.8.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "discord",
    "bot",
    "typescript",
    "prisma",
    "nextjs"
  ],
  "author": "Your Name",
  "license": "MIT"
}
