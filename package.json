{
  "name": "hinko",
  "version": "2.0.0",
  "description": "Comprehensive Discord Bot with Moderation, Level System, Geizhals Integration, Community Features and Admin Dashboard",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "dashboard": "cd dashboard && next dev -p 3001",
    "build:dashboard": "cd dashboard && next build",
    "start:dashboard": "cd dashboard && next start -p 3001",
    "build:all": "npm run build && npm run build:dashboard",
    "start:all": "concurrently \"npm start\" \"npm run start:dashboard\"",
    "dev:all": "concurrently \"npm run dev\" \"npm run dashboard\"",
    "lint": "eslint src/**/*.ts dashboard/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.ts dashboard/**/*.{ts,tsx} --fix",
    "test": "jest",
    "clean": "rimraf dist dashboard/.next",
    "docker:build": "docker build -t hinko-bot .",
    "docker:run": "docker run -p 3000:3000 -p 3001:3001 hinko-bot",
    "postinstall": "cd dashboard && npm install"
  },
  "keywords": [
    "discord",
    "bot",
    "moderation",
    "leveling",
    "geizhals",
    "polls",
    "giveaways",
    "tickets",
    "automod",
    "dashboard",
    "typescript",
    "nextjs",
    "prisma"
  ],
  "author": "Hinko Bot Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "chalk": "^4.1.2",
    "commandkit": "^0.1.10",
    "discord.js": "^14.19.3",
    "dotenv": "^16.5.0",
    "node-cron": "^3.0.3",
    "axios": "^1.7.0",
    "zod": "^3.23.0",
    "lodash": "^4.17.21",
    "ms": "^2.1.3",
    "uuid": "^9.0.1",
    "validator": "^13.12.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.4.0",
    "compression": "^1.7.4",
    "sanitize-html": "^2.13.0",
    "he": "^1.2.0",
    "moment": "^2.30.0",
    "file-type": "^19.0.0",
    "mime-types": "^2.1.35",
    "marked": "^12.0.0",
    "dompurify": "^3.0.0",
    "jsdom": "^24.0.0",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/node-cron": "^3.0.11",
    "@types/lodash": "^4.17.0",
    "@types/ms": "^0.7.34",
    "@types/uuid": "^9.0.8",
    "@types/validator": "^13.12.0",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/sanitize-html": "^2.11.0",
    "@types/he": "^1.2.3",
    "@types/marked": "^6.0.0",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.6",
    "@types/mime-types": "^2.1.4",
    "prisma": "^5.15.0",
    "tsx": "^4.15.0",
    "typescript": "^5.4.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "prettier": "^3.2.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "supertest": "^6.3.0",
    "@types/supertest": "^6.0.0",
    "rimraf": "^5.0.0",
    "nodemon": "^3.1.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**/*"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}